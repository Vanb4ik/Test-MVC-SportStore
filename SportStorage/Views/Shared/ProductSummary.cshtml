@model Product
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
        </h4>
        <span class="badge badge-pill badge-primary float-right">
            <small>
                @Model.Price.ToString("c")
            </small>
        </span>
        <div class="card-text p-1">@Model.Description</div>
    </div>
</div>